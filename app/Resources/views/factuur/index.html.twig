{% extends 'base.html.twig' %}

{% block body %}
    <h1>Facturen lijst</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datum</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for factuur in factuurs %}
            <tr>
                <td><a href="{{ path('factuur_show', { 'id': factuur.id }) }}">{{ factuur.id }}</a></td>
                <td>{{ factuur.datum }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('factuur_show', { 'id': factuur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('factuur_edit', { 'id': factuur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('factuur_new') }}">Maak een nieuwe factuur aan!</a>
        </li>
    </ul>
{% endblock %}
